@model IEnumerable<Student>

@{
    ViewBag.Title = "Students";
}

<h2>الطلاب</h2>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>الاسم الأول</th>
            <th>الاسم الأخير</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.StudentId</td>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
            </tr>
        }
    </tbody>
</table>
<form method="post" action="@Url.Action("AddStudent", "School")">
    <input type="text" name="firstName" placeholder="الاسم الأول" required />
    <input type="text" name="lastName" placeholder="الاسم الأخير" required />
    <button type="submit">إضافة طالب</button>
</form>

